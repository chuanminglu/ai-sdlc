{
  "openapi": "3.0.0",
  "info": {
    "title": "article API",
    "description": "为内容编辑提供文章管理的 API，目的是快速发布内容",
    "version": "1.0.0"
  },
  "paths": {
    "/articles/create": {
      "post": {
        "tags": [
          "文章"
        ],
        "summary": "创建文章",
        "operationId": "createArticle",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ArticleCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "成功创建文章",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Article"
                }
              }
            }
          },
          "400": {
            "description": "请求参数错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Article": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "唯一标识符"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "创建时间"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "更新时间"
          }
        },
        "required": [
          "id"
        ]
      },
      "ArticleCreate": {
        "type": "object",
        "required": [],
        "properties": {}
      },
      "ArticleUpdate": {
        "type": "object",
        "properties": {}
      },
      "Error": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "string",
            "description": "错误代码"
          },
          "message": {
            "type": "string",
            "description": "错误信息"
          }
        }
      }
    }
  }
}